<h1>Listing servers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Salt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.name %></td>
    <td><%= server.url %></td>
    <td><%= server.salt %></td>
    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_bigbluebutton_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

