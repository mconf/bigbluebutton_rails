<% if @room.new_record? %>
  <% url = bigbluebutton_rooms_path %>
<% else %>
  <% url = bigbluebutton_room_path(@room) %>
<% end %>

<%= form_for setup_bigbluebutton_room(@room), :url => url do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %>:</h2>
      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :id %><br />
    <%= @room.id %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :meetingid %><br />
    <%= f.text_field :meetingid %>
  </div>
  <div class="field">
    <%= f.label :private %><br />
    <%= f.check_box :private %>
  </div>
  <div class="field">
    <%= f.label :attendee_key %><br />
    <%= f.text_field :attendee_key %>
  </div>
  <div class="field">
    <%= f.label :moderator_key %><br />
    <%= f.text_field :moderator_key %>
  </div>
  <div class="field">
    <%= f.label :welcome_msg %><br />
    <%= f.text_field :welcome_msg %>
  </div>
  <div class="field">
    <%= f.label :logout_url %><br />
    <%= f.text_field :logout_url %>
  </div>
  <div class="field">
    <%= f.label :dial_number %><br />
    <%= f.text_field :dial_number %>
  </div>
  <div class="field">
    <%= f.label :voice_bridge %><br />
    <%= f.text_field :voice_bridge %>
  </div>
  <div class="field">
    <%= f.label :max_participants %><br />
    <%= f.text_field :max_participants %>
  </div>
  <div class="field">
    <%= f.label :external %><br />
    <%= f.check_box :external %>
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </div>
  <div class="field">
    <%= f.label :record_meeting %><br />
    <%= f.check_box :record_meeting %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :moderator_only_message %><br />
    <%= f.text_field :moderator_only_message %><br />
  </div>
  <div class="field">
    <%= f.label :auto_start_recording %><br />
    <%= f.check_box :auto_start_recording %><br />
  </div>
  <div class="field">
    <%= f.label :allow_start_stop_recording %><br />
    <%= f.check_box :allow_start_stop_recording %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
